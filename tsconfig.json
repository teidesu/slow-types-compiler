{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "lib": [
            "es2020"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "types": [
            "node",
            "vite/client"
        ],
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": true,
        "inlineSources": true,
        "sourceMap": true,
        "stripInternal": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
